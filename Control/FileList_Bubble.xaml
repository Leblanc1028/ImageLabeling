<UserControl x:Class="Label_Monster.Control.FileList_Bubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Label_Monster.Control"
             mc:Ignorable="d" 
             >
    
    <Grid>
        <Border x:Name="Current_Mark" CornerRadius="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="255" Height="45" Background="#FF04DDFF" Margin="7.5,7.5,0,0" />
            <Border x:Name="B0" CornerRadius="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="40" Background="#FF535353" 
             MouseDown="On_MouseDown" MouseUp="On_MouseUp" MouseMove="On_MouseMove" MouseLeave="On_MouseLeave" Margin="10,10,0,0">

            <Grid Margin="32,5,10,5">
                <TextBlock x:Name="FileName_Container"  Foreground="White"  FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </Grid>
        </Border>
        <Border x:Name="State_Ball" Width="15" Height="15" Background="#FFFFFBFB" CornerRadius="30" Margin="20,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Grid>
</UserControl>
