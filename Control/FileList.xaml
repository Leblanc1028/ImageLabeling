<UserControl x:Class="Label_Monster.Control.FileList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Label_Monster.Control"
             mc:Ignorable="d" 
             >
    <Grid x:Name="G0" Width="300" Height="500">
        <Border x:Name="B0" CornerRadius="12" Background="#FF212138" >
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel x:Name="Stack_Panel" Width="300" Height="600">
                    
                </StackPanel>
            </ScrollViewer>
                
        </Border>

    </Grid>
</UserControl>

    