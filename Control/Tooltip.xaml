<UserControl x:Class="Label_Monster.Control.Tooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Label_Monster.Control"
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid x:Name="Outer" Height="45" Width="130" Margin="5" Grid.RowSpan="2" Background="#FF151617"  >

            <Border x:Name="Border_" CornerRadius="12" Background="#FF151617">
                <Label x:Name="Label" Content="" FontSize="20" Height="35"    Width="120" Background="#FF151617" Foreground="#FFB7B6B6" BorderBrush="{x:Null}" BorderThickness="0"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0"/>
            </Border>
            <icon:PackIcon x:Name="packIcon" Kind="CheckCircle" Visibility="Collapsed"  Width="31" Height="31" Foreground="#FF27F321" VerticalAlignment="Center"/>


        </Grid>


    </Grid>
</UserControl>
